<Window x:Class="ShapeGame2.SerialConnector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SerialConnector" Height="120" Width="300" Closing="Window_Closing"
        x:Name="serialWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button Content="Connect to robot fish" HorizontalAlignment="Stretch" Margin="0" Name="RobotConnectButton" VerticalAlignment="Stretch" Click="RobotConnectButton_Click" />
        <Button Content="Connect to feedback" Grid.Row="1" HorizontalAlignment="Stretch" Margin="0" Name="FeedbackConnectButton" VerticalAlignment="Stretch" Click="FeedbackConnectButton_Click" />
        <ComboBox Grid.Column="1" HorizontalAlignment="Stretch" Margin="0" Name="RobotPortList" VerticalAlignment="Stretch" DropDownOpened="RobotPortList_DropDownOpened" />
        <ComboBox Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" Margin="0" Name="FeedbackPortList" VerticalAlignment="Stretch" DropDownOpened="FeedbackPortList_DropDownOpened" />
    </Grid>
</Window>
